{
  "name": "nktc-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "NKTC Student Management System - Monorepo",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:stream": "turbo run dev --ui=stream",
    "dev:tui": "turbo run dev --ui=tui",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "dev:frontend": "turbo run dev --filter=nktc-app",
    "dev:backend": "turbo run dev --filter=backend",
    "build:frontend": "turbo run build --filter=nktc-app",
    "build:backend": "turbo run build --filter=backend",
    "dev:all": "turbo run dev"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "body-parser": "^2.2.0",
    "esbuild": "^0.25.11",
    "happy-dom": "^20.0.8",
    "validator": "^13.15.15",
    "vitest": "^4.0.2",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zod": "^4.1.12"
  },
  "resolutions": {
    "happy-dom": "^20.0.8",
    "esbuild": "^0.25.11",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "tmp": "^0.2.5"
  }
}
